<HomeScreen>
    MDCard:
        size_hint: None, None
        size: 600, 800
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'vertical'

            MDLabel:
                text: 'Health Department App'
                font_size: 45
                halign: 'center'


            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}

                MDLabel:
                    text: 'Enter Credentials for Database'
                    font_size: 30
                    halign: 'left'

                MDLabel:
                    text: 'Enter Credentials for OpenMRS'
                    font_size: 30
                    halign: 'left'


            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}
                padding: 25
                spacing: 25

                MDTextField:
                    hint_text: 'Authority'
                    font_size: 30
                    id: database_host

                MDTextField:
                    hint_text: 'Authority'
                    font_size: 30
                    id: openmrs_host

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}
                padding: 25
                spacing: 25

                MDTextField:
                    hint_text: 'Port Number'
                    font_size: 30
                    id: database_port

                MDTextField:
                    hint_text: 'Port Number'
                    font_size: 30
                    id: openmrs_port

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}
                padding: 25
                spacing: 25

                MDTextField:
                    hint_text: 'Username'
                    font_size: 30
                    id: database_username

                MDTextField:
                    hint_text: 'Username'
                    font_size: 30
                    id: openmrs_username

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}
                padding: 25
                spacing: 25

                MDTextField:
                    hint_text: 'Password'
                    font_size: 30
                    id: database_password

                MDTextField:
                    hint_text: 'Password'
                    font_size: 30
                    id: openmrs_password

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}
                padding: 25
                spacing: 25

                MDTextField:
                    hint_text: 'Database'
                    font_size: 30
                    id: database_database

    Widget:
        size_hint_y: None
        height: 40

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': 0.5,}
        padding: 25
        spacing: 25



        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 25
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5,}

            MDRaisedButton:
                text: 'Login'
                font_size: 30

        Widget:
            size_hint_y: None
            height: 10





