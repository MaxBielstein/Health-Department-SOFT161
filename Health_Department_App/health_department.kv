<HomeScreen>
    MDCard:
        size_hint: None, None
        size: 900, 800
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'vertical'

            MDLabel:
                text: 'Health Department App'
                font_size: 45
                halign: 'center'


            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}

                MDLabel:
                    text: 'Enter Credentials for Database'
                    font_size: 30
                    halign: 'left'

                MDLabel:
                    text: 'Enter Credentials for OpenMRS'
                    font_size: 30
                    halign: 'left'


            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}
                padding: 25
                spacing: 25

                MDTextField:
                    hint_text: 'Authority'
                    text: app.host
                    font_size: 30
                    id: database_host

                MDTextField:
                    hint_text: 'Authority'
                    text: app.openmrs_host
                    font_size: 30
                    id: openmrs_host

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}
                padding: 25
                spacing: 25

                MDTextField:
                    hint_text: 'Port Number'
                    text: app.port
                    font_size: 30
                    id: database_port

                MDTextField:
                    hint_text: 'Port Number'
                    text: app.openmrs_port
                    font_size: 30
                    id: openmrs_port

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}
                padding: 25
                spacing: 25

                MDTextField:
                    hint_text: 'Username'
                    text: app.user
                    font_size: 30
                    id: database_username

                MDTextField:
                    hint_text: 'Username'
                    text: app.openmrs_user
                    font_size: 30
                    id: openmrs_username

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}
                padding: 25
                spacing: 25

                MDTextField:
                    hint_text: 'Password'
                    text: app.password
                    font_size: 30
                    id: database_password

                MDTextField:
                    hint_text: 'Password'
                    text: app.openmrs_password
                    font_size: 30
                    id: openmrs_password

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5,}
                padding: 25
                spacing: 25

                MDTextField:
                    hint_text: 'Database'
                    text: app.database_name
                    font_size: 30
                    id: database_database

    Widget:
        size_hint_y: None
        height: 40

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 25

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 25
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5,}

            MDRaisedButton:
                text: 'Login'
                font_size: 30
                on_press:
                    app.login_button()
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'LoadingLogin'


        Widget:
            size_hint_y: None
            height: 10


<LoadingLogin>

    MDCard:
        size_hint: None, None
        size: 900, 800
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'


        MDBoxLayout:
            orientation: 'vertical'
            padding: 25
            spacing: 25

            MDLabel:
                text: 'Logging in'
                halign: 'center'
                font_size: 45

            MDLabel:
                text: 'Current Action'
                font_size: 30
                halign: 'center'
                id: current_action_loading_login

            MDBoxLayout:
                orientation: 'horizontal'
                padding: 25
                spacing: 25

                MDSpinner:
                    size_hint: None, None
                    size: dp(26), dp(26)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    active: True

                MDProgressBar:
                    value: 0
                    id: loading_login_progress_bar

                Widget:
                    size_hint_x: None
                    width: 10

            MDRaisedButton:
                text: '(Dev button temp) Increase progress bar'
                font_size: 30
                on_release:
                    root.ids.loading_login_progress_bar.value += 10


            MDRaisedButton:
                text: '(Dev button temp) Next screen'
                font_size: 30
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'DataPreview'

<DataPreview>

    MDCard:
        size_hint: None, None
        size: 900, 800
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True


            MDLabel:
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                text: 'really some amazing text\n' * 100

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 25

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 25
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5,}

            MDRaisedButton:
                text: 'Abort'
                font_size: 30
                on_release:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'home'

            MDRaisedButton:
                text: 'Import'
                font_size: 30

        Widget:
            size_hint_y: None
            height: 10





