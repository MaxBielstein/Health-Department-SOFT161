<SelectManufacturerForClinic>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Spinner:
                size_hint: None, None
                size: 500, 100
                pos_hint: {'center': 'center'}
                text: 'Manufacturers'
                id: select_manufacturer_for_clinic_spinner
                values: 'Manufacturer 1', 'Manufacturer 1', 'Manufacturer 3', 'Manufacturer 4'
                on_text:
                    print("The spinner {} has text {}".format(self, self.text))
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Add'
                    id: add_manufacturer_for_clinic
                    font_size: 60

                Button:
                    text: 'Remove'
                    id: remove_manufacturer_for_clinic
                    font_size: 60
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Back'
                    font_size: 60
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'clinic'
                Button:
                    text: 'Done'
                    id: done_manufacturer_for_clinic
                    font_size: 60
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'home'

