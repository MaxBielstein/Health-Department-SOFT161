<SelectManufacturerForClinic>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Spinner:
                size_hint: None, None
                size: 500, 100
                pos_hint: {'center': 'center'}
                text: 'Manufacturers'
                values: 'Manufacturer 1', 'Manufacturer 1', 'Manufacturer 3', 'Manufacturer 4'
                on_text:
                    print("The spinner {} has text {}".format(self, self.text))
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Add'
                    font_size: 60

                Button:
                    text: 'Remove'
                    font_size: 60
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Back'
                    font_size: 60
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'clinic'
                Button:
                    text: 'Done'
                    font_size: 60
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'home'
