<HomeScreen>
    MDCard:
        size_hint: None, None
        size: 600, 400
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 5
        padding: 25
        spacing: 25

        orientation: 'vertical'

        MDLabel:
            text: 'Vaccine Distribution App'
            font_size: 30
            halign: 'center'


        MDFillRoundFlatButton:
            text: 'Add/Edit Vaccination Clinics'
            font_size: 30
            pos_hint: {'center_x': 0.5,}

            size: 0, 60
            size_hint: None, None

            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'clinic'

        MDFillRoundFlatButton:
            text: 'New Vaccine'
            font_size: 30
            pos_hint: {'center_x': 0.5,}

            size: 0, 60
            size_hint: None, None
            increment_width: 240


            on_press:
                app.load_manufacturer_spinners_for_vaccines()
                root.manager.transition.direction = 'left'
                root.manager.current = 'new_vaccine'


        MDFillRoundFlatButton:
            text: 'Order Vaccine'
            font_size: 30
            pos_hint: {'center_x': 0.5,}

            size: 0, 60
            size_hint: None, None
            increment_width: 230

            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'order_vaccine'

<ClinicScreen>

    MDCard:
        size_hint: None, None
        size: 600, 400
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 5
        padding: 25
        spacing: 25

        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'vertical'

            MDBoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: 'Add/Edit Vaccination Clinic'
                    font_size: 45
                    halign: 'center'

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint: None, None
                    size: self.minimum_size
                    pos_hint: {'center_x': 0.5,}

                    MDRectangleFlatButton:
                        text: 'Existing Clinic'
                        theme_text_color: 'Primary'
                        text_color: 0, 0.5, 1, 1
                        font_size: 30
                        on_press:
                            root.manager.transition.duration = 0
                            root.manager.current = 'ExistingClinic'
                            app.existing_clinic_clicked()

                    MDRaisedButton:
                        text: 'New Clinic'
                        font_size: 30

                Widget:
                    size_hint_y: None
                    height: 40

                MDTextField:
                    hint_text: 'Clinic Name'
                    id:new_clinic_name
                    write_tab: False
                    multiline: False
                    font_size: 25

                MDTextField:
                    hint_text: 'Clinic Address'
                    id:new_clinic_address
                    write_tab: False
                    multiline: False
                    font_size: 25

                MDTextField:
                    hint_text: 'Clinic ID'
                    input_filter: 'int'
                    id:new_clinic_id
                    write_tab: False
                    multiline: False
                    font_size: 25

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 25

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 25
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5,}

            MDRaisedButton:
                id: create_new_clinic
                text: 'Add and Select Clinic'
                font_size: 30
                on_press:
                    root.manager.transition.duration = 0.4
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'm_for_clinic'
                    app.create_new_clinic()
                    app.load_manufacturer_spinners_for_clinics()
            MDRaisedButton:
                text: 'Back'
                font_size: 30
                on_press:
                    root.manager.transition.duration = 0.4
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'home'

        Widget:
            size_hint_y: None
            height: 10


