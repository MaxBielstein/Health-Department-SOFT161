<SelectManufacturerForClinic>

    MDCard:
        size_hint: None, None
        size: 600, 400
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'vertical'
            spacing: 25
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5,}

            MDLabel:
                text: "Add/Remove Manufacturers from clinic"
                font_size: 35



            Widget:
                size_hint_y: None
                height: 30
                halign: 'center'


            MDLabel:
                text: "Select a manufacturer from available manufacturers then press add to add a manufacturer"
                font_size: 15
                halign: 'center'

            Widget:
                size_hint_y: None
                height: 3
                halign: 'center'

            MDLabel:
                text: "Select a manufacturer from current manufacturers then press remove to remove a manufacturer"
                font_size: 15
                halign: 'center'
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 25
                size_hint: None, None
                size: self.minimum_size
                pos_hint: {'center_x': 0.5,}

                Spinner:
                    size_hint: None, None
                    size: 250, 60
                    pos_hint: {'center': 'center'}
                    text: 'Available Manufacturers'
                    font_size: 20
                    id: select_manufacturer_to_remove_for_clinic_spinner
                    background_color: 0, 1.5, 4, 1
                    on_text:
                        print("The spinner {} has text {}".format(self, self.text))

                Spinner:
                    size_hint: None, None
                    size: 250, 60
                    pos_hint: {'center': 'center'}
                    text: 'Current Manufacturers'
                    font_size: 20
                    id: select_manufacturer_to_add_for_clinic_spinner
                    background_color: 0, 1.5, 4, 1
                    on_text:
                        print("The spinner {} has text {}".format(self, self.text))

            Widget:
                size_hint_y: None
                height: 10

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 25
                size_hint: None, None
                size: self.minimum_size
                pos_hint: {'center_x': 0.5,}

                MDRaisedButton:
                    text: 'Add'
                    id: add_manufacturer_for_clinic
                    font_size: 30
                    on_press:
                        app.load_manufacturer_spinners_for_clinics()

                MDRaisedButton:
                    text: 'Remove'
                    id: remove_manufacturer_for_clinic
                    font_size: 30
                    on_press:
                        app.load_manufacturer_spinners_for_clinics()

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 25

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 25
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5,}

            MDRaisedButton:
                text: 'Back'
                font_size: 30
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'clinic'
            MDRaisedButton:
                text: 'Done'
                id: done_manufacturer_for_clinic
                font_size: 30
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'home'
        Widget:
            size_hint_y: None
            height: 10

