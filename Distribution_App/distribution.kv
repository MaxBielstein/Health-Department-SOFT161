<HomeScreen>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Add/Edit Vaccination Clinics'
                font_size: 60
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'clinic'
            Button:
                text: 'New Vaccine'
                font_size: 60
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'new_vaccine'
            Button:
                text: 'Order Vaccine'
                font_size: 60
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'order_vaccine'
<ClinicScreen>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Add/Edit Vaccination Clinic'
                font_size: 60
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Existing Clinic'
                    font_size: 60
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'clinic_0'
                Button:
                    text: 'New Clinic'
                    font_size: 60
                    background_color: [.5, .5, 1, .5]
            Label:
                text: 'Clinic Name'
                font_size: 60
            TextInput:
                write_tab: False
                multiline: False
                font_size: 60
            Label:
                text: 'Clinic Address'
                font_size: 60
            TextInput:
                write_tab: False
                multiline: False
                font_size: 60
            Button:
                text: 'Add and Select Clinic'
                font_size: 60
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'm_for_clinic'
            Button:
                text: 'Back'
                font_size: 60
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'home'

