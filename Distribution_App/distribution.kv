<HomeScreen>
    MDCard:
        size_hint: None, None
        size: 600, 400
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 5
        padding: 25
        spacing: 25

        orientation: 'vertical'

        MDLabel:
            text: 'Vaccine Distribution App'
            font_size: 30
            halign: 'center'


        MDFillRoundFlatButton:
            text: 'Add/Edit Vaccination Clinics'
            font_size: 30
            pos_hint: {'center_x': 0.5,}

            size: 0, 60
            size_hint: None, None

            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'clinic'

        MDFillRoundFlatButton:
            text: 'New Vaccine'
            font_size: 30
            pos_hint: {'center_x': 0.5,}

            size: 0, 60
            size_hint: None, None
            increment_width: 240


            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'new_vaccine'

        MDFillRoundFlatButton:
            text: 'Order Vaccine'
            font_size: 30
            pos_hint: {'center_x': 0.5,}

            size: 0, 60
            size_hint: None, None
            increment_width: 230

            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'order_vaccine'

<ClinicScreen>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Add/Edit Vaccination Clinic'
                font_size: 60
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Existing Clinic'
                    font_size: 60
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'ExistingClinic'
                Button:
                    text: 'New Clinic'
                    font_size: 60
                    background_color: [.5, .5, 1, .5]
            Label:
                text: 'Clinic Name'
                font_size: 60
            TextInput:
                id: new_clinic_name
                write_tab: False
                multiline: False
                font_size: 60
            Label:
                text: 'Clinic Address'
                font_size: 60
            TextInput:
                id: new_clinic_address
                write_tab: False
                multiline: False
                font_size: 60
            Button:
                id: create_new_clinic
                text: 'Add and Select Clinic'
                font_size: 60
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'm_for_clinic'
            Button:
                text: 'Back'
                font_size: 60
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'home'

